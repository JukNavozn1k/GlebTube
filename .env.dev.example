# ===== Django =====
# Generate a strong key for real use
SECRET_KEY=change-me-dev
DEBUG=1
ALLOWED_HOSTS=localhost 127.0.0.1
TIME_ZONE=UTC

# ===== Postgres =====
DB_NAME=glebtube
DB_USER=postgres
DB_PASS=postgres
# In docker-compose dev, backend connects to service "db"
DB_HOST=db
DB_PORT=5432

# ===== Redis / Celery =====
# Service name is "redis" in docker-compose
CELERY_BROKER_URL=redis://redis:6379/0
REDIS_CACHE_URL=redis://redis:6379/1
REDIS_HOST=redis
REDIS_PORT=6379

# ===== Frontend =====
# Frontend dev runs at http://localhost:5173, backend at http://localhost:8000
# API is mounted under /api/ (see backend/GlebTube/urls.py)
VITE_APP_API_URL=http://localhost:8000/api

# ===== Media defaults (optional) =====
