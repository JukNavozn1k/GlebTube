# ===== Django =====
# Generate a strong, secret value for production (do NOT commit the real one)
SECRET_KEY=change-me-prod
DEBUG=0
# Space-separated list; set to your domains and/or IPs
ALLOWED_HOSTS=*
TIME_ZONE=UTC

# ===== Postgres =====
DB_NAME=glebtube
DB_USER=postgres
# Use a strong password in real deployment
DB_PASS=postgres
# In docker-compose.prod, backend connects to service "db"
DB_HOST=db
DB_PORT=5432

# ===== Redis / Celery =====
CELERY_BROKER_URL=redis://redis:6379/0
REDIS_CACHE_URL=redis://redis:6379/1
REDIS_HOST=redis
REDIS_PORT=6379

# ===== Frontend =====
# In prod, Nginx serves frontend and proxies /api -> backend, so same-origin relative path works
VITE_APP_API_URL=/api

# ===== Media defaults (optional) =====
DEFAULT_AVATAR_URL=https://images.icon-icons.com/11/PNG/256/person_man_people_Jew_religion_1620.png
DEFAULT_THUMBNAIL_URL=https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcQztLRnAWYw2TSTe-eQpoMj3PM3qlfHddTKXA&usqp=CAU
